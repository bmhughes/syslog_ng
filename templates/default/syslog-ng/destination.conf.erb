# Destination - <%= @description %>
destination <%= @name -%> {
  <% unless nil_or_empty?(@destination) -%>
  <% @destination.each do |config| -%>
  <% config.each do |driver, parameters| -%>
  <% result = destination_builder(driver: driver, parameters: parameters, multiline: @multiline) -%>
  <% if result.is_a?(String) -%>
  <%= result %>
  <% elsif result.is_a?(Array) -%>
  <% result.each do |line| -%>
  <%= line %>
  <% end -%>
  <% end -%>
  <% end -%>
  <% end -%>
  <% end -%>
  <% unless nil_or_empty?(@blocks) -%>
  <% @blocks.each do |block, config| -%>
  <%= block -%>(<%= build_parameter_string(:block, config) -%>)
  <% end -%>
  <% end -%>
};
